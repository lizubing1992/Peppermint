<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageView
    android:id="@+id/backIV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space10"
    android:layout_marginLeft="@dimen/space10"
    android:src="@drawable/selector_home_btn" />

  <ImageView
    android:id="@+id/frontIV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space10"
    android:layout_gravity="center_vertical"
    android:src="@drawable/selector_home_back" />

  <ImageView
    android:id="@+id/afterIV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/space10"
    android:layout_gravity="center_vertical|right"
    android:src="@drawable/selector_home_front" />

  <ImageView
    android:id="@+id/exitIV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space10"
    android:layout_marginRight="@dimen/space10"
    android:layout_gravity="right"
    android:src="@drawable/selector_home_exit" />


</FrameLayout>